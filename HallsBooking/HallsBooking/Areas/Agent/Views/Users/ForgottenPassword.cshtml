@{
    ViewBag.Title = "Forgotten Password";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h3 style="color:red;text-align:center">Forgotten Password</h3>
@{

    using (Html.BeginForm("ForgottenPassword", "Users", FormMethod.Post, new { id = "registration-form" }))
    {
        <table align="center" style="height:50%;width:50%" border="0">
            <tr>
                <td>@Html.Label("Email", "Enter EmailId")</td>
                <td>@Html.TextBox("Email")</td>
            </tr>
            <tr>
                <td></td>
                <td><input type="submit" id="submit" value="Submit" /></td>
            </tr>
        </table>
        <h6 style="color:red;font-size:20px;text-align:center;">@ViewBag.Result</h6>
    }
}
<script src="~/Scripts/RegistrationFormValidation.js"></script>
<link href="~/Content/ValidationStyles.css" rel="stylesheet" />
<script>
    $('h6').fadeOut(10000);
</script>