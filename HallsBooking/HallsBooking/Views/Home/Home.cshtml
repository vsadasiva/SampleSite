@model IEnumerable<HallImage>

@{
    ViewBag.Title = "Home";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div id="content">
    <div id="SlideshowImages">
        @if (Model != null)
        {
            foreach (var item in Model)
            {
            <div>
                <img src="/Home/RetrieveImage/@item.ImageId" height="250" width="600">
            </div>  
            }
        }
    </div>
</div>
<div id="column">
    <div class="holder">
        <h2 class="title">
            <img src="../images/demo/60x60.gif" alt="">Nullamlacus dui ipsum conseque</h2>
        <p>Nullamlacus dui ipsum conseque loborttis non euisque morbi penas dapibulum orna. Urnaultrices quis curabitur phasellentesque.</p>
        <p class="readmore"><a href="#">Continue Reading »</a></p>
    </div>
</div>
<script type="text/javascript">
    $(document).ready(function () {
        $("#slideshow > div:gt(0)").hide();
        setInterval(function () {
            $('#SlideshowImages > div:first').fadeOut(1000).next().fadeIn(1000).end().appendTo('#SlideshowImages');
        }, 3000);
    });
</script>
<style type="text/css" style="display: none !important;">
    #SlideshowImages {
        margin: 50px auto;
        position: relative;
        width: 600px;
        height: 250px;
        padding: 10px;
        box-shadow: 0 0 20px rgba(0, 0, 0, 0.4);
    }

        #SlideshowImages > div {
            position: absolute;
            top: 10px;
            left: 10px;
            right: 10px;
            bottom: 10px;
        }
</style>
